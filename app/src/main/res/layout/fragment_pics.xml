<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/pics_fragment_btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家装"
            android:textColor="#ffffff"
            android:enabled="false"
            android:background="@drawable/pics_ic_home"/>
        <Button
            android:id="@+id/pics_fragment_btn_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工装"
            android:textColor="#666"
            android:background="@drawable/pics_ic_work"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#55cccccc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_weight="1"
                android:background="#fff"
                android:text="全部空间"
                android:textColor="#666"
                android:layout_marginRight="1dp"
                android:drawableRight="@drawable/pics_ic_xiajiantou"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:text="全部风格"
                android:textColor="#666"
                android:drawableRight="@drawable/pics_ic_xiajiantou"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>